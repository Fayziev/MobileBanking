<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/authScreen"
        tools:layout="@layout/screen_auth"
        android:name="uz.gita.mobilebanking.ui.fragments.AuthScreen"
        android:label="AuthScreen" >
        <action
            android:id="@+id/action_authScreen_to_registerScreen"
            app:destination="@id/registerScreen" />
        <action
            android:id="@+id/action_authScreen_to_loginScreen"
            app:destination="@id/loginScreen" />
    </fragment>
    <fragment
        tools:layout="@layout/screen_login"
        android:id="@+id/loginScreen"
        android:name="uz.gita.mobilebanking.ui.fragments.LoginScreen"
        android:label="LoginScreen" >
        <action
            android:id="@+id/action_loginScreen_to_smsVerifyScreen"
            app:destination="@id/smsVerifyScreen" />
    </fragment>
    <fragment
        tools:layout="@layout/screen_main"
        android:id="@+id/mainScreen"
        android:name="uz.gita.mobilebanking.ui.fragments.MainScreen"
        android:label="MainScreen" >
        <action
            android:id="@+id/action_mainScreen_to_resetPasswordScreen"
            app:destination="@id/resetPasswordScreen" />
    </fragment>
    <fragment
        tools:layout="@layout/screen_reset_password"
        android:id="@+id/resetPasswordScreen"
        android:name="uz.gita.mobilebanking.ui.fragments.ResetPasswordScreen"
        android:label="ResetPasswordScreen" />
    <fragment
        tools:layout="@layout/screen_sms_verify"
        android:id="@+id/smsVerifyScreen"
        android:name="uz.gita.mobilebanking.ui.fragments.SmsVerifyScreen"
        android:label="SmsVerifyScreen" >
        <action
            android:id="@+id/action_smsVerifyScreen_to_mainScreen"
            app:destination="@id/mainScreen" />
    </fragment>
    <fragment
        tools:layout="@layout/screen_splash"
        android:id="@+id/splashScreen"
        android:name="uz.gita.mobilebanking.ui.fragments.SplashScreen"
        android:label="SplashScreen">
        <action
            android:id="@+id/action_splashScreen_to_authScreen"
            app:destination="@id/authScreen" />
        <action
            android:id="@+id/action_splashScreen_to_mainScreen"
            app:destination="@id/mainScreen" />
    </fragment>
    <fragment
        tools:layout="@layout/screen_register"
        android:id="@+id/registerScreen"
        android:name="uz.gita.mobilebanking.ui.fragments.RegisterScreen"
        android:label="RegisterScreen" >
        <action
            android:id="@+id/action_registerScreen_to_smsVerifyScreen"
            app:destination="@id/smsVerifyScreen" />
    </fragment>
</navigation>